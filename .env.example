# Environment Configuration Example
# Copy this file to .env and adjust values for your environment

# Application
APP_NAME="Transcription Service Backend"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database
DB_URL="mssql+pyodbc://transcribeapp:transcribeapp@localhost,51392/Transcribe?driver=ODBC+Driver+17+for+SQL+Server"
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS=20

# Celery
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"
CELERY_TIMEZONE="UTC"

# AI Models
AI_WHISPER_MODEL_PATH="openai/whisper-large-v3"
AI_DIARIZATION_MODEL_PATH="pyannote/speaker-diarization-3.1"
AI_DEVICE="auto"  # auto, cpu, cuda:0
AI_BATCH_SIZE=16
AI_BEAM_SIZE=5
AI_TEMPERATURE=0.0
AI_HF_TOKEN=""  # Hugging Face token for model access

# Audio Processing
AUDIO_SAMPLE_RATE=16000
AUDIO_MAX_SEGMENT_DURATION=28.0
AUDIO_STORAGE_PATH="./audio_files"

# Security
SECURITY_SECRET_KEY="your-secret-key-change-in-production"
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_CORS_ORIGINS="http://localhost,http://localhost:8080,https://localhost:7003,http://localhost:5149"

# Logging
LOGGING_LEVEL="INFO"
LOGGING_USE_JSON=false
LOGGING_FILE_PATH=""  # Leave empty for console logging only